        </script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    
    <style>
        .people button:hover{
            color: #54E783;  
            box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
        }

        span.glyphicon-user {
            font-size: 1.2em;
        }
        .container {
            text-align: center;
        }
        .blue {
            background-color: #fff;
            border-color: #fff;
            border-width: 0ch;
        }
        .people {
            background-color: #fff;
            text-align: center;
        }
        .icon {
            font-size: 200%;
            width: 120px;
        }
        .sendRecive {
            padding: 10%;
            text-align: center;
        }


        .progress{
            margin: 5%;
        }
        .form-group{
            margin: 5%;
        }
        #snackbar {
            visibility: hidden;
            min-width: 250px;
            margin-left: -125px;
            background-color: #333;
            color: #fff;
            text-align: center;
            border-radius: 2px;
            padding: 16px;
            position: fixed;
            z-index: 1;
            left: 50%;
            bottom: 30px;
            font-size: 17px;
        }
        #snackbar.show {
            visibility: visible;
            -webkit-animation: fadein 0.5s, fadeout 0.5s 2.5s;
            animation: fadein 0.5s, fadeout 0.5s 2.5s;
        }

        .card{
            box-shadow:20px 16px 18px 0 rgba(85, 50, 50, 0.2); 
            border-radius: 20px;
            transition: 0.3s;
            padding: 20px;
            display: inline-box;
            margin: 2%;
            background-color: rgb(138, 248, 239);
        }
        .btn-primary-outline {
            background-color: transparent;
            border-color:transparent;
        }
        
        .nameInAttendance{
            
        }

        .card:hover{
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }
        
        @-webkit-keyframes fadein {
            from {
                bottom: 0;
                opacity: 0;
            }
            to {
                bottom: 30px;
                opacity: 1;
            }
        }
        @keyframes fadein {
            from {
                bottom: 0;
                opacity: 0;
            }
            to {
                bottom: 30px;
                opacity: 1;
            }
        }
        @-webkit-keyframes fadeout {
            from {
                bottom: 30px;
                opacity: 1;
            }
            to {
                bottom: 0;
                opacity: 0;
            }
        }
        @keyframes fadeout {
            from {
                bottom: 30px;
                opacity: 1;
            }
            to {
                bottom: 0;
                opacity: 0;
            }
        }
    </style>

    


</head>

